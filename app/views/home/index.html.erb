<%= javascript_include_tag "pagination" %>
<div style="float:left;">
	<b><%= link_to 'Add New photo collections', new_photo_collection_path %></b>
</div>
<% if current_user %>
	<div style="float:right;margin-right:5px;">
		Logged in as <%= current_user.email if current_user %>
		&nbsp; <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
	</div>
<% end %>
<div style="clear:both;"></div>
<div id="photo-collections" style="margin: 5px;">
	<%= render 'photo_collections/photo_collections' %>
</div>

<script type="text/javascript">
	$(".fancybox").fancybox({
	   helpers : { 
	    title : { type : 'inside' }
	   }, // helpers
	   beforeLoad: function() {
	    this.title = $(this.element).attr('title');
	   }
	}); // fancybox
</script>



