<table cellpadding=0 cellspacing=0>
	<th>Collection Name</th>
	<th>Collection Description</th>
	<th>Collection Photos</th>
	<th>Created at</th>
	<th>&nbsp;Edit</th>
	<th>&nbsp;Delete</th>
<% if @photo_collection.present? %>
  <tr valign="top">
	 <td><%= @photo_collection.name %>
	 <td><%= @photo_collection.description %>
	 <td><% @photo_collection.attachments.each do |attachment| %>
	    <%=link_to(cl_image_tag(attachment.file.url(:thumbnail).to_s, { size: '125x125', crop: :fit }), attachment.file.url, :data => { :'fancybox-group' => 'gallery' }, :class => "fancybox", :title => "#{attachment.name}-#{attachment.created_at.strftime('%d %b. %Y')}") %>
	 <% end %>
	</td>
	<td>&nbsp;<%= @photo_collection.created_at.strftime("%d %b. %Y") %></td>
	<% if current_user && current_user.id == @photo_collection.user.id %>
		<td>
			&nbsp;<%= link_to 'edit',edit_photo_collection_path(@photo_collection.id) %>
		</td>
		<td>
			&nbsp;<%= link_to "Delete", photo_collection_path(@photo_collection.id), :method => :delete, :data => { :confirm => "Are you sure?" } %>
		</td>
	<% else %>
		<td>&nbsp;&nbsp;No Permission</td>
		<td>&nbsp;&nbsp;No Permission</td>
	<% end %>
  </tr>
 </table>
 <% else %>
 	<div> Photo Collections not found </div>
 <% end %>

<script type="text/javascript">
    $(document).ready(function(){
        $(".fancybox").fancybox({
		   helpers : { 
		    title : { type : 'inside' }
		   }, // helpers
		   beforeLoad: function() {
		    this.title = $(this.element).attr('title');
		   }
  		}); // fancybox
    });
</script>
